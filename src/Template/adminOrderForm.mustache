<div class="row">
    <div class="col-12 col-sm-6">
        <table class="table table-bordered">
            <tbody>
            <tr>
                <th>Ordernumber</th>
                <td>{{model.orderId}}</td>
            </tr>
            <tr>
                <th>Orderdatum</th>
                <td>{{model.createdAt}}</td>
            </tr>
            <tr>
                <th>Orderstatus</th>
                <td>{{model.orderState.name[]}}</td>
            </tr>
            {{#model.discount}}
            <tr>
                <th>
                    %SHOP_DISCOUNT_CODE%
                </th>
                <td>
                    {{model.discount.code}}
                </td>
            </tr>
            {{/model.discount}}
            </tbody>
        </table>
    </div>
    <div class="col-12 col-sm-6">
        <table class="table table-bordered">
            <tbody>
            {{#model.orderMessage}}
                <tr>
                    <th>Customer note</th>
                    <td>{{model.orderMessage}}</td>
                </tr>
            {{/model.orderMessage}}
            <tr>
                <th>Property</th>
                <td>{{model.property}}</td>
            </tr>
            <tr>
                <th>EntryUrl</th>
                <td>{{model.entryUrl}}</td>
            </tr>
            <tr>
                <th>IP-address</th>
                <td>{{model.ipAddress}}</td>
            </tr>
            {{#model.affiliateId}}
            <tr>
                <th>Affiliate</th>
                <td>{{affiliateName}}</td>
            </tr>
            {{/model.affiliateId}}
            <tr>
                <td>
                    {{#shippingLabelLink}}
                        {{{shippingLabelLink}}}
                    {{/shippingLabelLink}}
                </td>
                <td>
                    {{model.shippingType.barcode}}
                    {{{barcodeForm}}}
                </td>
            </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-12 col-sm-6">
        <table class="table table-bordered">
            <tr>
                <th colspan="2">Invoice</th>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{model.shopper.user.firstName}}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>
                    {{#model.shopper.user.middleName}}
                        {{model.shopper.user.middleName}}
                    {{/model.shopper.user.middleName}}
                    {{model.shopper.user.lastName}}
                </td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{model.shopper.user.email}}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{model.shopper.user.street}}</td>
            </tr>
            <tr>
                <th>Housenumber</th>
                <td>{{model.shopper.user.houseNumber}}</td>
            </tr>
            <tr>
                <th>Zip-code</th>
                <td>{{model.shopper.user.zipCode}}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{model.shopper.user.city}}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{model.shopper.user.countryName}}</td>
            </tr>
            <tr>
                <th>Phone-number</th>
                <td>{{model.shopper.user.phoneNumber}}</td>
            </tr>
            <tr>
                <th>Waar ken je ons van?</th>
                <td>{{model.refferer}}</td>
            </tr>
        </table>
    </div>
    <div class="col-12 col-sm-6">
        <table class="table table-bordered">
            <tbody>
            <tr>
                <th colspan="2">Ship To</th>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{model.shiptoAddress.firstName}}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>
                    {{#model.shiptoAddress.middleName}}
                    {{model.shiptoAddress.middleName}}
                    {{/model.shiptoAddress.middleName}}
                    {{model.shiptoAddress.lastName}}
                </td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{model.shiptoAddress.email}}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{model.shiptoAddress.street}}</td>
            </tr>
            <tr>
                <th>Housenumber</th>
                <td>{{model.shiptoAddress.houseNumber}}</td>
            </tr>
            <tr>
                <th>Zip-code</th>
                <td>{{model.shiptoAddress.zipCode}}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{model.shiptoAddress.city}}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{model.shiptoAddress.countryName}}</td>
            </tr>
            <tr>
                <th>Phone-number</th>
                <td>{{model.shiptoAddress.phoneNumber}}</td>
            </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <table class="table table-bordered">
            <tbody>
            <tr>
                <th>Aantal</th>
                <th>Naam</th>
                <th>Art. nr.</th>
                <th>Productprijs (excl.)</th>
                <th>Productprijs (incl.)</th>
                <th class="text-right">Totaal</th>
            </tr>
            {{#model.items.products}}
            <tr valign="top">
                <td>{{quantity}}</td>
                <td><a href="{{getSlug}}" class="openmodal">{{name[]}}</a></td>
                <td>
                    {{genderDisplay.name[]}} {{variation}}
                    {{#manufacturerDisplay.name[]}}
                        <br /><small>{{manufacturerDisplay.name[]}}</small>
                    {{/manufacturerDisplay.name[]}}
                    {{#packingName}}
                        <br /><small>%SHOP_PACKING_TYPE% : {{packingName}}</small>
                    {{/packingName}}
                </td>
                <td>
                    {{#price_discountDisplay}}
                        {{{model.currency}}}&nbsp;{{price_discountDisplay}}<br />
                        <small>
                            <s>
                                {{{model.currency}}}&nbsp;{{priceDisplay}}
                            </s>
                        </small>
                    {{/price_discountDisplay}}
                    {{^price_discountDisplay}}
                        {{{model.currency}}}&nbsp;{{priceDisplay}}
                    {{/price_discountDisplay}}

                </td>
                <td>
                    {{#price_discountSaleDisplay}}
                    {{{model.currency}}}&nbsp;{{price_discountSaleDisplay}}<br />
                        <small>
                            <s>
                                {{{model.currency}}}&nbsp;{{price_saleDisplay}}
                            </s>
                        </small>
                    {{/price_discountSaleDisplay}}
                    {{^price_discountSaleDisplay}}
                        {{{model.currency}}}&nbsp;{{price_saleDisplay}}
                    {{/price_discountSaleDisplay}}
                </td>
                <td class="text-right">
                    {{#subTotalDiscountSaleDisplay}}
                    {{{model.currency}}}&nbsp;{{subTotalDiscountSaleDisplay}}<br/>
                        <small>
                            <s>
                                {{{model.currency}}}&nbsp;{{subTotalSaleDisplay}}
                            </s>
                        </small>
                    {{/subTotalDiscountSaleDisplay}}
                    {{^subTotalDiscountSaleDisplay}}
                        {{{model.currency}}}&nbsp;{{subTotalSaleDisplay}}
                    {{/subTotalDiscountSaleDisplay}}
                </td>
            </tr>
            {{/model.items.products}}
            <tr>
                <th colspan="5" class="text-right">Subtotaal</th>
                <td class="text-right">
                    {{{model.currency}}}&nbsp;{{model.items.subTotalDisplay}}
                </td>
            </tr>
            <tr>
                <th class="text-right" colspan="5">VAT</th>
                <td class="text-right">
                    {{{model.currency}}}&nbsp;{{model.items.vatDisplay}}
                </td>
            </tr>
            <tr>
                <th class="text-right" colspan="5">Verzendkosten</th>
                <td class="text-right">
                    {{{model.currency}}}&nbsp;{{model.shippingAmountDisplay}}
                </td>
            </tr>
            <tr>
                <th class="text-right" colspan="5">
                    Verzendbelasting
                </th>
                <td class="text-right">
                    {{{model.currency}}}&nbsp;{{model.shippingTaxDisplay}}
                </td>
            </tr>
            {{#model.totalDiscountDisplay}}
                <tr>
                    <th class="text-right" colspan="5">
                        %SHOP_DISCOUNT%
                    </th>
                    <td class="text-right">
                        {{{SHOP_CURRENCY_BASE}}} -{{model.totalDiscountDisplay}}
                    </td>
                </tr>
            {{/model.totalDiscountDisplay}}
            <tr>
                <th class="text-right" colspan="5">
                    Totaal
                </th>
                <th class="text-right">
                    {{{model.currency}}}&nbsp;{{model.totalDisplay}}
                </th>
            </tr>
            </tbody>
        </table>
    </div>
</div>
