<div class="row">
    <div class="col-12 col-sm-6">
        <table class="table table-bordered">
            <tbody>
            <tr>
                <th>Ordernumber</th>
                <td>{{adminEditItem.orderId}}</td>
            </tr>
            <tr>
                <th>Orderdatum</th>
                <td>{{adminEditItem.createdAt}}</td>
            </tr>
            <tr>
                <th>Orderstatus</th>
                <td>{{adminEditItem.orderState.name[]}}</td>
            </tr>
            {{#adminEditItem.discount}}
            <tr>
                <th>
                    %SHOP_DISCOUNT_CODE%
                </th>
                <td>
                    {{adminEditItem.discount.code}}
                </td>
            </tr>
            {{/adminEditItem.discount}}
            </tbody>
        </table>
    </div>
    <div class="col-12 col-sm-6">
        <table class="table table-bordered">
            <tbody>
            {{#adminEditItem.orderMessage}}
                <tr>
                    <th>Customer note</th>
                    <td>{{adminEditItem.orderMessage}}</td>
                </tr>
            {{/adminEditItem.orderMessage}}
            <tr>
                <th>Property</th>
                <td>{{adminEditItem.property}}</td>
            </tr>
            <tr>
                <th>EntryUrl</th>
                <td>{{adminEditItem.entryUrl}}</td>
            </tr>
            <tr>
                <th>IP-address</th>
                <td>{{adminEditItem.ipAddress}}</td>
            </tr>
            {{#adminEditItem.affiliateId}}
            <tr>
                <th>Affiliate</th>
                <td>{{affiliateName}}</td>
            </tr>
            {{/adminEditItem.affiliateId}}
            <tr>
                <td>
                    {{#shippingLabelLink}}
                        {{{shippingLabelLink}}}
                    {{/shippingLabelLink}}
                </td>
                <td>
                    {{adminEditItem.shippingType.barcode}}
                    {{{barcodeForm}}}
                </td>
            </tr>
            </tbody>
        </table>
    </div>
</div>
