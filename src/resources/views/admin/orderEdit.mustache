<div class="row">
    <div class="col-12">
        <table class="table table-bordered">
            <tbody>
            <tr>
                <th>Aantal</th>
                <th>Naam</th>
                <th>Art. nr.</th>
                <th>Productprijs (excl.)</th>
                <th>Productprijs (incl.)</th>
                <th class="text-right">Totaal</th>
            </tr>
            {{#adminEditItem.items.products}}
            <tr valign="top">
                <td>{{quantity}}</td>
                <td><a href="{{slug}}" class="openmodal">{{name[]}}</a></td>
                <td>
                    {{genderDisplay.name[]}} {{variation}}
                    {{#manufacturerDisplay.name[]}}
                        <br /><small>{{manufacturerDisplay.name[]}}</small>
                    {{/manufacturerDisplay.name[]}}
                    {{#packingName}}
                        <br /><small>%SHOP_PACKING_TYPE% : {{packingName}}</small>
                    {{/packingName}}
                </td>
                <td>
                    {{#price_discountDisplay}}
                        {{{adminEditItem.currency}}}&nbsp;{{price_discountDisplay}}<br />
                        <small>
                            <s>
                                {{{adminEditItem.currency}}}&nbsp;{{priceDisplay}}
                            </s>
                        </small>
                    {{/price_discountDisplay}}
                    {{^price_discountDisplay}}
                        {{{adminEditItem.currency}}}&nbsp;{{priceDisplay}}
                    {{/price_discountDisplay}}

                </td>
                <td>
                    {{#price_discountSaleDisplay}}
                    {{{adminEditItem.currency}}}&nbsp;{{price_discountSaleDisplay}}<br />
                        <small>
                            <s>
                                {{{adminEditItem.currency}}}&nbsp;{{price_saleDisplay}}
                            </s>
                        </small>
                    {{/price_discountSaleDisplay}}
                    {{^price_discountSaleDisplay}}
                        {{{adminEditItem.currency}}}&nbsp;{{price_saleDisplay}}
                    {{/price_discountSaleDisplay}}
                </td>
                <td class="text-right">
                    {{#subTotalDiscountSaleDisplay}}
                    {{{adminEditItem.currency}}}&nbsp;{{subTotalDiscountSaleDisplay}}<br/>
                        <small>
                            <s>
                                {{{adminEditItem.currency}}}&nbsp;{{subTotalSaleDisplay}}
                            </s>
                        </small>
                    {{/subTotalDiscountSaleDisplay}}
                    {{^subTotalDiscountSaleDisplay}}
                        {{{adminEditItem.currency}}}&nbsp;{{subTotalSaleDisplay}}
                    {{/subTotalDiscountSaleDisplay}}
                </td>
            </tr>
            {{/adminEditItem.items.products}}
            <tr>
                <th colspan="5" class="text-right">Subtotaal</th>
                <td class="text-right">
                    {{{adminEditItem.currency}}}&nbsp;{{adminEditItem.items.subTotalDisplay}}
                </td>
            </tr>
            <tr>
                <th class="text-right" colspan="5">VAT</th>
                <td class="text-right">
                    {{{adminEditItem.currency}}}&nbsp;{{adminEditItem.items.vatDisplay}}
                </td>
            </tr>
            <tr>
                <th class="text-right" colspan="5">Verzendkosten</th>
                <td class="text-right">
                    {{{adminEditItem.currency}}}&nbsp;{{adminEditItem.shippingAmountDisplay}}
                </td>
            </tr>
            <tr>
                <th class="text-right" colspan="5">
                    Verzendbelasting
                </th>
                <td class="text-right">
                    {{{adminEditItem.currency}}}&nbsp;{{adminEditItem.shippingTaxDisplay}}
                </td>
            </tr>
            {{#adminEditItem.totalDiscountDisplay}}
                <tr>
                    <th class="text-right" colspan="5">
                        %SHOP_DISCOUNT%
                    </th>
                    <td class="text-right">
                        {{{SHOP_CURRENCY_BASE}}} -{{adminEditItem.totalDiscountDisplay}}
                    </td>
                </tr>
            {{/adminEditItem.totalDiscountDisplay}}
            <tr>
                <th class="text-right" colspan="5">
                    Totaal
                </th>
                <th class="text-right">
                    {{{adminEditItem.currency}}}&nbsp;{{adminEditItem.totalDisplay}}
                </th>
            </tr>
            </tbody>
        </table>
    </div>
</div>
